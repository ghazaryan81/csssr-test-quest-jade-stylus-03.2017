.scale
	margin-left 1px
	clear both
	clearfix()

	&__point
		position()
		&:after
			position(0, 0, absolute)
			width 3px
			content ''
			background url(../../img/sprite.png) 0 -522px no-repeat

	&__point:nth-of-type(1)
	&__point:nth-of-type(2)
	&__point:nth-of-type(3)
		float left

	&__point:nth-of-type(1)
	&__point:nth-of-type(2)
	&__point:nth-of-type(3)
	&__point:nth-of-type(4)
		+below(breakPoint9)
			float none
			width 50%

	&__point:nth-of-type(1)
		+below(breakPoint9)
			height 79px

	&__point:nth-of-type(2)
		+below(breakPoint9)
			height 131px

	&__point:nth-of-type(3)
		+below(breakPoint9)
			height 238px

	&__point:nth-of-type(1)
	&__point:nth-of-type(2)
	&__point:nth-of-type(3)
	&__point:nth-of-type(4)
		&:after
			+below(breakPoint9)
				transform rotate(-90deg)

	&__point:nth-of-type(1)
		padding 22px 20px 0 0
		width 18.63%
		.point-title
			left 0
		+below(breakPoint9)
			top 0
			padding 0 20px 0 0
			.point-title
				top -8px
				left 30px
		&:after
			top 1px
			left -1px
			height 25px
			+below(breakPoint9)
				top -11px
				left 11px

	&__point:nth-of-type(2)
		padding 20px 20px 0 0
		width 29.60077922077922%
		+below(breakPoint9)
			top 0
			padding 0 20px 0 0
			.point-title
				top -4px
				left 30px
		&:after
			top 0
			left 4px
			height 13px
			+below(breakPoint9)
				left 5px

	&__point:nth-of-type(3)
		padding 23px 20px 0 0
		width 25.5%
		+below(breakPoint9)
			top 0
			padding 0 20px 0 0
			.point-title
				top 0
				left 30px
		&:after
			top 1px
			left 2px
			height 13px
			+below(breakPoint9)
				left 5px

	&__point:nth-of-type(4)
		padding 27px 0 0
		float right
		width 25.7%
		text-align right
		+below(breakPoint9)
			top 0
			padding 0 20px 0 0
			text-align left
			.point-title
				top -14px
				left 30px
		&:after
			top 1px
			right 0
			left auto
			height 25px
			+below(breakPoint9)
				top -11px
				left 11px
