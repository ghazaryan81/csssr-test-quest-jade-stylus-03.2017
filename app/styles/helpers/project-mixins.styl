section-out-pad()
	padding-left 62px
	padding-right 68px
	+below(breakPoint5)
		padding-left 42px
		padding-right 48px
	+below(breakPoint3)
		padding-x 0

textarea-decoration()
	position(0, 0, relative, 2)
	overflow hidden
	font 30px/60px cu
	word-wrap break-word
	resize none
	color textareaColor
	background url(../../img/info-line.png) repeat-y left 48px transparent
	border none
	outline-width 0
	transition color .24s ease-in-out, font-size .24s ease-in-out
	+below(breakPoint5)
		font-size 25px
